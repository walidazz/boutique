{% extends 'base.html.twig' %}

{% block title %}{{product.name}}{% endblock %}

{% block body %}


<div class="container bootdey mt-5">
  <div class="col-md-12">
  <section class="panel">
        <div class="panel-body row">
            <div class="col-md-6">
                <div class="pro-img-details">
                    <img src="{{asset('uploads/article_image/' ~ product.illustration) | imagine_filter('detail')}}" alt="">
                </div>
                <div class="pro-img-list">

                  {% for image in product.pictures  %}
                    <a href="#">
                        <img src="{{asset('uploads/article_image/' ~ image.url) | imagine_filter('miniature')}}" alt="">
                    </a>

                    {% endfor %}

         
                </div>
            </div>
            <div class="col-md-6">
                <h4 class="pro-d-title">
                    <a href="#" class="">
                        {{product.name}}
                    </a>
                </h4>
                <p>
                    {{product.subtitle}}
                </p>

                {{product.description |raw}}
                <div class="product_meta">
                    <span class="posted_in"> <strong>Categorie:</strong> <a rel="tag" href="#">{{product.category.name}}</a></span>
                </div>
                <div class="m-bot15"> <strong>Prix : </strong> <span class="amount-old">{{(product.price / 100 + 10) |number_format(2, '.', ',') }} €</span> 
                  <span class="pro-price"> {{(product.price / 100) |number_format(2, '.', ',') }} €</span> </div>
           
                <p>

                    <a href="{{path('add_to_cart', { id : product.id})}}" class="btn btn-round btn-danger">Ajouter au panier</a>
                </p>
            </div>
        </div>
    </section>
    </div>
    </div>

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}


<div class="row my-4">

    <div class="col-md-12">


        <div>
            <h1>Nos produits</h1>
        </div>

        {% if products|length > 0 %}

        <div class="row mb-4">
            {% for product in products %}

            <div class="col-md-4">
                <div class="product-item text-center">
                    <img src="{{asset('uploads/article_image/' ~ product.illustration)}}" class="img-fluid" alt=""
                        srcset="">
                    <h5>{{product.name}}</h5>

                    <span class="product-subtitle"> {{product.subtitle}} </span> <br>
                    <span class="product-price">{{(product.price / 100) | number_format(2, '.', ',')}} €</span> <br>
                    <a href="{{path('product_show', {'slug': product.slug})}}" class="btn-secondary btn btn-md">Voir
                        le
                        produit</a>
                </div>

            </div>
            {% endfor %}

        </div>
        {% else %}
        <div class="mx-auto">Aucun résultat trouvé</div>

        {% endif %}
    </div>
</div>



<div class="navigation">

    <div class="mx-auto">
        {{ knp_pagination_render(products) }}
    </div>
</div>


{% endblock %}
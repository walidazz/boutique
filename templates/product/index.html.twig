{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}
<div class="text-center">
    <h1>Nos produits</h1>
</div>



<div class="row mb-4">
    {% for product in products %}

    <div class="col-md-4">
        <div class="product-item text-center">
            <img src="{{asset('uploads/' ~ product.illustration)}}" alt="" srcset="">
            <h5>{{product.name}}</h5>

            <span class="product-subtitle"> {{product.subtitle}} </span> <br>
            <span class="product-price">{{(product.price / 100) | number_format(2, '.', ',')}} â‚¬</span> <br>
            <a href="{{path('product_show', {'slug': product.slug})}}" class="btn-secondary btn btn-md">Voir le
                produit</a>
        </div>

    </div>
    {% endfor %}

</div>





{% endblock %}
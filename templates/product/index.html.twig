{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}


<div class="row my-4">
    <div class="col-md-3">
        <h3>Filtrer </h3>

        {{form(form)}}


    </div>
    <div class="col-md-9">


        <div>
            <h1>Nos produits</h1>
        </div>



        <div class="shop-items">
            <div class="container-fluid">
                <div class="row">
                    {% for product in products %}

                    {% include "partials/_card.html.twig" with { 'product' : product} %}

                    {% endfor %}
                </div>

            </div>
        </div>


    </div>

</div>


<div class="pagination">
    <div class="mx-auto">


        {{ knp_pagination_render(products) }}
    </div>
</div>


{% endblock %}
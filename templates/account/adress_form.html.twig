{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse {% endblock %}

{% block body %}

<h1>Ajouter une nouvelle adresse </h1>


<div class="mx-auto col-md-12">
    {{ form_start(form) }}
    <div> {{ form_row(form.name) }} </div>
    <div class="row">
        <div class="col"> {{ form_row(form.firstName) }}</div>
        <div class="col">{{ form_row(form.lastName) }}</div>
    </div>

    <div class="row">
        <div class="col">{{ form_row(form.adress) }}</div>
        <div class="col">{{ form_row(form.postal) }}</div>
    </div>

    <div class="row">
        <div class="col">{{ form_row(form.city) }}</div>
        <div class="col">{{ form_row(form.country) }}</div>
    </div>

    <div class="row">
        <div class="col">{{ form_row(form.phone) }}</div>
        <div class="col">{{ form_row(form.company) }}</div>
    </div>
{{ form_widget(form) }}
</div>
{% endblock %}
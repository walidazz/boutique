<div class="container">
    {% for label,messages in app.flashes %}
    {% for message in messages %}
    <div class="mx-auto col-4 text-center">
        <div class="alert alert-dismissible alert-{{label}}">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{message}}
        </div>
    </div>
    {% endfor %}
    {% endfor %}
</div>